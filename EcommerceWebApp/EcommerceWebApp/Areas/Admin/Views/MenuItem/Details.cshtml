
@model EcommerceWebApp.Models.MenuItem
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Menu Item Details</h2>
<br />
<div class="border backgroundWhite">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Price" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Price" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Description" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Description" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Image" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Image" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Stock" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Stock" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Category" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Category.Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="SubCategory" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="SubCategory.Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DetailsAndBackToListButton" model="Model.ID" />

        </div>

    </div>
</div>
