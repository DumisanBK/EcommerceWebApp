@model EcommerceWebApp.Models.ViewModels.MenuItemViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Menu Item</h2>

<form method="post" asp-action="Delete">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="MenuItem.Name" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="MenuItem.Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="MenuItem.Price" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="MenuItem.Price" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="MenuItem.Image" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="MenuItem.Image" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="MenuItem.SubCategory" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="MenuItem.SubCategory" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="MenuItem.Category" class="control-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="MenuItem.Category" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DeleteAndBackToListButton" model="Model.MenuItem.ID" />

        </div>

    </div>
</form>
